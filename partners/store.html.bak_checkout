<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Partner Store</title>
  <link rel="stylesheet" href="/partners/styles.css" />
</head>
<body>
  <main class="container">
    <h1 id="title">Partner Store</h1>
    <p id="subtitle"></p>

    <section style="margin-top:24px;">
      <h2 style="font-size:18px;margin:0 0 12px 0;">Catalog</h2>
      <div id="catalog-grid"></div>
      <pre id="catalog-status" style="white-space:pre-wrap;margin-top:16px;"></pre>
    </section>
  </main>

  <script>
    const titleEl = document.getElementById("title");
    const subtitleEl = document.getElementById("subtitle");
    const gridEl = document.getElementById("catalog-grid");
    const statusEl = document.getElementById("catalog-status");

    function getSlugFromUrl() {
      const url = new URL(window.location.href);
      return (url.searchParams.get("slug") || "").trim().toLowerCase();
    }

    async function loadPartner(slug) {
      const res = await fetch(`/.netlify/functions/partner-get?slug=${encodeURIComponent(slug)}`);
      const data = await res.json().catch(() => ({}));
      if (!res.ok) throw new Error(data?.error || "Failed to load partner");
      return data;
    }

    async function loadCatalog() {
      const res = await fetch("/partners/catalog.json", { cache: "no-store" });
      const data = await res.json().catch(() => null);
      if (!res.ok || !data) throw new Error("Failed to load catalog");
      return Array.isArray(data) ? data : (data.products || []);
    }

    function escapeHtml(s) {
      return String(s ?? "").replace(/[&<>"']/g, c =>
        ({ "&":"&amp;","<":"&lt;",">":"&gt;","\"":"&quot;","'":"&#39;" }[c])
      );
    }

    function resolveImageUrl(img) {
      if (!img) return "";
      const s = String(img).trim();

      // already absolute URL
      if (/^https?:\/\//i.test(s)) return s;

      // absolute path
      if (s.startsWith("/")) return s;

      // filename -> /images/<filename>
      return `/images/${s}`;
    }

    function renderCatalog(products) {
      const active = products.filter(p => p?.active !== false);

      if (!active.length) {
        statusEl.textContent = "No active products found in catalog.json";
        gridEl.innerHTML = "";
        return;
      }

      statusEl.textContent = "";
      gridEl.innerHTML = active.map(p => {
        const name = escapeHtml(p.name || p.title || "Unnamed");
        const desc = escapeHtml(p.description || "");
        const price = p.price != null ? `$${p.price}` : "";
        const imgUrl = resolveImageUrl(p.image || p.imageUrl || "");

        // We hide broken images with onerror; no broken icon
        const imgHtml = imgUrl ? `
          <div class="img-wrap">
            <img class="card-img" src="${escapeHtml(imgUrl)}" alt="${name}"
                 onerror="this.style.display='none'; this.parentElement.classList.add('img-missing');" />
          </div>
        ` : `<div class="img-wrap img-missing"></div>`;

        return `
          <div class="card">
            ${imgHtml}
            <div class="card-body">
              <div class="card-title">${name}</div>
              ${desc ? `<div class="card-desc">${desc}</div>` : ""}
              <div class="card-meta">
                ${price ? `<span class="pill">${escapeHtml(price)}</span>` : ""}
              </div>
              <div class="card-actions">
                <button class="btn" disabled>Buy (soon)</button>
              </div>
            </div>
          </div>
        `;
      }).join("");
    }

    function injectStyles() {
      const css = `
        #catalog-grid { display:grid; grid-template-columns:repeat(auto-fill,minmax(280px,1fr)); gap:18px; }

        .card { border:1px solid rgba(255,255,255,0.12); border-radius:16px; overflow:hidden; background:rgba(255,255,255,0.03); }
        .card-body { padding:16px; }
        .card-title { font-size:16px; font-weight:700; margin:0 0 8px 0; }
        .card-desc { font-size:13px; opacity:0.85; line-height:1.4; margin:0 0 12px 0; }
        .card-meta { display:flex; gap:10px; margin-bottom:14px; }
        .pill { display:inline-block; font-size:12px; border:1px solid rgba(255,255,255,0.14); padding:4px 10px; border-radius:999px; }

        /* Logo-card style image area */
        .img-wrap {
          height: 170px;
          display:flex;
          align-items:center;
          justify-content:center;
          background: rgba(255,255,255,0.04);
          border-bottom: 1px solid rgba(255,255,255,0.10);
        }
        .card-img {
          max-width: 78%;
          max-height: 78%;
          object-fit: contain;
          display:block;
          filter: drop-shadow(0 10px 18px rgba(0,0,0,0.25));
        }
        .img-missing::after {
          content: "No image";
          font-size: 12px;
          opacity: 0.65;
        }

        .card-actions { display:flex; gap:10px; }
        .btn { padding:8px 12px; border-radius:10px; border:1px solid rgba(255,255,255,0.16); background:rgba(255,255,255,0.06); color:inherit; cursor:not-allowed; }
      `;
      const style = document.createElement("style");
      style.textContent = css;
      document.head.appendChild(style);
    }

    window.addEventListener("DOMContentLoaded", async () => {
      injectStyles();

      const slug = getSlugFromUrl();
      if (!slug) {
        subtitleEl.textContent = "Missing slug";
        return;
      }

      try {
        const [partner, products] = await Promise.all([ loadPartner(slug), loadCatalog() ]);
        titleEl.textContent = partner?.name ? `${partner.name} Store` : `Store: ${slug}`;
        subtitleEl.textContent = `slug: ${slug}`;
        renderCatalog(products);
      } catch (err) {
        subtitleEl.textContent = err.message || String(err);
      }
    });
  </script>
</body>
</html>
